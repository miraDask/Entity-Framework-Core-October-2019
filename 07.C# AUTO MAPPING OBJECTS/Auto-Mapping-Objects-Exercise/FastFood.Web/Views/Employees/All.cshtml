@model IList<FastFood.Web.ViewModels.Employees.EmployeesAllViewModel>

@{
    ViewData["Title"] = "All Employees";
}

@if (Model.Count > 0)
{
    <h1 class="text-center"><a asp-area="" asp-controller="Employees" asp-action="Register">Register Employee</a></h1>
    <hr class="hr-2" />
    <h1 class="text-center">All Employees</h1>
    <hr class="hr-2" />
    <table class="table mx-auto">
        <thead>
            <tr class="row">
                <th class="col-md-1">#</th>
                <th class="col-md-2">Name</th>
                <th class="col-md-2">Age</th>
                <th class="col-md-2">Address</th>
                <th class="col-md-2">Position</th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.Count(); i++)
            {
                <tr class="row">
                    <th class="col-md-1">@(i + 1)</th>
                    <td class="col-md-2">@Model[i].Name</td>
                    <td class="col-md-2">@Model[i].Age</td>
                    <td class="col-md-2">@Model[i].Address</td>
                    <td class="col-md-2">@Model[i].Position</td>
                    <td class="col-md-2"><a asp-area="" asp-controller="Employees" asp-action="Delete" method="post" asp-route-id="@Model[i].Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <hr class="hr-2" />
    <h4 class="text-center">There are no employees registered at the moment</h4>
    <hr class="hr-2" />
    <h1 class="text-center"><a asp-area="" asp-controller="Employees" asp-action="Register">Register Employee</a></h1>

}
