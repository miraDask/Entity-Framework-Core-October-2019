@model IList<FastFood.Web.ViewModels.Positions.PositionsAllViewModel>

@{
    ViewData["Title"] = "All Positions";
}
    
    <h1 class="text-center"><a asp-area="" asp-controller="Positions" asp-action="Create">Create Position</a></h1>
    <hr class="hr-2" />

<h1 class="text-center">All Positions</h1>
<hr class="hr-2" />
<table class="table mx-auto">
    <thead>
        <tr class="row">
            <th class="col-md-1">#</th>
            <th class="col-md-2">Category</th>
        </tr>
    </thead>
    <tbody>
        @for(var i = 0; i < Model.Count(); i++)
    {
        <tr class="row">
            <th class="col-md-1">@(i + 1)</th>
            <td class="col-md-2">@Model[i].Name</td>
            <td class="col-md-2"><a asp-area="" asp-controller="Positions" asp-action="Delete" method="post" asp-route-id="@Model[i].Id">Delete</a></td>
        </tr>
    }
    </tbody>
</table>