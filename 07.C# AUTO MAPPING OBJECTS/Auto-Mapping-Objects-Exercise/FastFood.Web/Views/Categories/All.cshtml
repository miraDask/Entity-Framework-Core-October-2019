@model IList<FastFood.Web.ViewModels.Categories.CategoryAllViewModel>

@{
    ViewData["Title"] = "All Categories";
}

@if (Model.Count > 0)
{
    <h1 class="text-center"><a asp-area="" asp-controller="Categories" asp-action="Create">Create Category</a></h1>
    <hr class="hr-2" />

    <h1 class="text-center">All Categories</h1>
    <hr class="hr-2" />
    <table class="table mx-auto">
        <thead>
            <tr class="row">
                <th class="col-md-1">#</th>
                <th class="col-md-2">Category</th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.Count(); i++)
            {
                <tr class="row">
                    <th class="col-md-1">@(i + 1)</th>
                    <td class="col-md-2">@Model[i].Name</td>
                    <td class="col-md-2"><a asp-area="" asp-controller="Categories" asp-action="Delete" method="post" asp-route-id="@Model[i].Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{

    <hr class="hr-2" />
    <h4 class="text-center">There are no categories registered at the moment</h4>
    <hr class="hr-2" />
    <h1 class="text-center"><a asp-area="" asp-controller="Categories" asp-action="Create">Create Category</a></h1>

}
